{% extends '_layouts/layout_main' %}

{% block content %}


<div class="uk-container">
  <div class="uk-width-1-1 uk-align-center uk-background-muted" uk-grid>
    <div class="" uk-grid>
      <h2 class="uk-align-center uk-margin-medium-top uk-margin-small-bottom"> {{ entry.title }}</h2>
    </div> <!-- page heading -->

    {% set featureImage = entry.researchFeatureImage.one() %}
    {% if featureImage %}
      <img class="uk-align-center uk-margin-medium-bottom" data-src="{{ featureImage.getUrl() }}" alt="Project image" width=data-width height=data-height uk-img>
    {% else %}
      <img src="http://via.placeholder.com/500x400?text=&nbsp;" alt="placeholder" uk-img>
    {% endif %}

  </div>

  <div class="uk-margin-medium-left content">
    <h2>Authors</h2>
    <p>{{ entry.authors }}</p>

    <h2> Research Lab </h2>
    <p> {{ entry.researchLab.one() }} </p>
    
    <h2 class="heading">Abstract</h2>
    <p>{{ entry.shortAbstract }}</p>
    
    <div uk-grid>
      {% for block in entry.moreDetails.all() %}
        {% if block.type == "heading" %}

            <h2 class="uk-margin-medium-top">{{ block.sectionHeading }}</h2>

        {% elseif block.type == "text" %}

            {{ block.textblock|markdown }}

        {% elseif block.type == "imageGallery" %}
          <div class="uk-grid-medium uk-width-1-1 uk-child-width-1-3" uk-lightbox uk-grid>
          {% set images = block.image.all() %}
          {% for image in images %}
            <div>
              <a class="uk-inline" href="../{{image.getUrl()}}">
                <img src="../{{image.getUrl('thumbLSquare')}}">
              </a>
            </div>
          {% endfor %}
          </div>

        {% elseif block.type == "video" %}
          <div class="uk-width-1-1" uk-grid>
          {% set videos = block.video.all() %}
          {% for video in videos %}
            <video data-src="{{ video.getUrl() }}" width="100%" src=".././{{ video.getUrl() }}" controls playsinline uk-video="autoplay:false"></video>
          {% endfor %}
          </div>
        {% endif %}

      {% endfor %}
    </div>

    {% set publication = entry.publication %}
    {% if publication is defined and publication is not null %}
      <h2> Publication </h2>
      <p> {{ entry.publication }} </p>
    {% endif %}

  </div>
</div>

{% endblock %}