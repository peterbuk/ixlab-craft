{% extends '_layouts/layout_main' %}

{% set body_class = 'page-home' %}

{% block content %}

<div id="heroImage" class="uk-margin"></div>

<div class="uk-container">
  <!-- about section-->
  <section class="uk-margin-large-top">
    {% set home = craft.entries.section('home').first() %}
    <div class="uk-flex uk-flex-middle uk-grid-match uk-grid-medium" uk-grid>
      <div class="uk-width-2-5@m">
        <p id="aboutText">
          {{ home.about }}
        </p>
      </div>

      <div class="uk-width-3-5" id="recruitBox">
        <div class="uk-card uk-card-body">
          <h3  class="uk-card-title">{{ home.recruitmentHeader }}</h3>
          <div class="uk-column-1-1@s uk-column-1-2@m">
            <div class="">
              {{ home.recruitmentLeft }}
            </div>
            <div class="">
              {{ home.recruitmentRight }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- news section -->
  <section class="uk-margin-large-top">
    <h1 class="section-header uk-flex uk-flex-center">News</h1>

    <div class="uk-child-width-1-3 uk-grid-divider" uk-grid>
      {% for entry in craft.entries.section('news').orderBy('date desc').limit(3) %}
      <div>
        <div class="uk-card uk-card-small uk-card-body">
          <h3 class="uk-card-title">{{ entry.title }}</h3>
          <p>{{ entry.date | date('M d, Y') }}</p>
          <p>{{ entry.newsContent }}</p>
          <a class="button" href="{{ entry.url }}">Read More</a>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="uk-flex uk-flex-center uk-margin">
      <a class="uk-button uk-button-primary" href="{{ siteUrl }}./news">See more News</a> 
    </div>
  </section>


<!-- research section -->
  <section class="uk-margin-large-top">
    <h1 class="section-header uk-flex uk-flex-center">Selected Research</h1>

    <div class="uk-grid-match" uk-grid>
      {% for entry in craft.entries.section('research').limit(3) %}
      <div class="uk-width-1-3">
        <div class="uk-card uk-card-default">
          <div class="uk-card-media-top">
            {% set image = entry.featureImage.one() %}
            {% if image %}
              <img data-src="{{ image.getUrl('thumbWide') }}" alt="Project image" width="{{ image.getWidth('thumbWide') }}" height="{{ image.getHeight('thumbWide') }}" uk-img>
            {% else %}
              <img src="http://via.placeholder.com/580x320?text=&nbsp;" alt="placeholder">
            {% endif %}
          </div>
          <div class="uk-card-body">
            <h3 class="uk-margin-remove-bottom">{{ entry.title }}</h3>
            <span>{{ entry.authors }}</span>
            <p>{{ entry.shortAbstract }}</p>
            <a class="button" href="{{ entry.url }}">Read More</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="uk-flex uk-flex-center uk-margin">
      <a class="uk-button uk-button-primary" href="{{ siteUrl }}./research">See more Research</a> 
    </div>
  </section>



</div>

{% endblock %}