{% extends '_layouts/base' %}

{# macro to add active class to current nav page #}
{# https://craftcms.stackexchange.com/a/575 #}
{% macro is_active(segment) %}
{% if craft.app.request.segments|first == segment %}
	uk-active
{% endif %}
{% endmacro %}


{% block layout %}
<div class="l-external-container">
	<div class="l-main">
		
		<header>
			<div class="uk-container">
				<div class="uk-flex uk-flex-center uk-margin-top">
					{# <a href="{{ siteUrl }}"><img src="{{ alias('@assetUrl/img/siteAssets/ixlab.svg') }}" width="300" height="125" alt="ixLab"></a> #}
					<a href="{{ siteUrl }}"><img src="{{ siteUrl ~ siteLogo.siteLogo.one().getUrl() }}" width="300" height="125" alt="ixLab"></a>
				</div>
				
				<nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
					<div class="uk-navbar-center">
						<ul class="uk-navbar-nav uk-visible@s">
							<li class="{{ _self.is_active('') }}"><a href="{{ siteUrl }}">Home</a></li>
							<li class="{{ _self.is_active('people') }}"><a href="{{ siteUrl }}./people">People</a></li>
							<li class="{{ _self.is_active('research') }}"><a href="{{ siteUrl }}./research">Research</a></li>
							<li class="{{ _self.is_active('publications') }}"><a href="{{ siteUrl }}./publications">Publications</a></li>
							<li class="{{ _self.is_active('courses') }}"><a href="{{ siteUrl }}./courses">Courses</a></li>
							<li class="{{ _self.is_active('news') }}"><a href="{{ siteUrl }}./news">News</a></li>
							<li class="{{ _self.is_active('affiliations') }}"><a href="{{ siteUrl }}./affiliations">Affiliations</a></li>
						</ul>
						<a href="#" class="uk-navbar-toggle uk-hidden@s" uk-toggle="target: #sidenav">
							<span uk-navbar-toggle-icon></span><span class="uk-margin-small-left">MENU</span>
						</a>
					</div>
				</nav>

				<div id="sidenav" uk-offcanvas="flip: true" class="uk-offcanvas">
					<div class="uk-offcanvas-bar">
							<ul class="uk-nav">
								<li class="{{ _self.is_active('') }}"><a href="{{ siteUrl }}">Home</a></li>
								<li class="{{ _self.is_active('people') }}"><a href="{{ siteUrl }}./people">People</a></li>
								<li class="{{ _self.is_active('research') }}"><a href="{{ siteUrl }}./research">Research</a></li>
								<li class="{{ _self.is_active('publications') }}"><a href="{{ siteUrl }}./publications">Publications</a></li>
								<li class="{{ _self.is_active('courses') }}"><a href="{{ siteUrl }}./courses">Courses</a></li>
								<li class="{{ _self.is_active('news') }}"><a href="{{ siteUrl }}./news">News</a></li>
								<li class="{{ _self.is_active('affiliations') }}"><a href="{{ siteUrl }}./affiliations">Affiliations</a></li>
							</ul>
					</div>
			</div>
			</div>
		</header>

		{# main content for every page will go in here #}
		<div class="l-outside-footer">
			{% block content %}{% endblock %}
		</div>

	</div>

	<div class="l-footer-fixed">
		<footer class="uk-margin-large-top">
			<div class="uk-container uk-padding">
				<div uk-grid class="uk-flex uk-flex-middle">
					<div>
						<a href="{{ siteUrl }}"><img src="{{ siteUrl ~ siteLogo.siteLogo.one().getUrl() }}" width="300" height="125" alt="ixLab"></a>
					</div>
					<div>
						<p>School of Computing Science<br>
							Simon Fraser University<br>
							8888 University Dr,<br>
							Burnaby, BC V5A 1S6</p>
					</div>
				</div>
			</div>
		</footer>
	</div>
</div>
{% endblock %}